#-------------------------------------------------------------------------------
CC = g++
CFLAGS = -g -O2 
OBJECTS = fieldLib.o objFieldEntry.o objField.o \
          physicsEngine.o \
          baseDataObjectType.o
INCLUDES = $(wildcard *.h)

#-------------------------------------------------------------------------------
all: fieldLib
    
#-------------------------------------------------------------------------------
fieldLib: $(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS) -o $@

%.o: %.cpp $(INCLUDES)
	$(CC) $(CFLAGS) -c $<


#-------------------------------------------------------------------------------
doxygen:
	doxygen

#-------------------------------------------------------------------------------
clean:
	rm -f $(OBJECTS)
	rm -f fieldLib
	rm -rf html/ latex/


